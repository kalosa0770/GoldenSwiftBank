{
  "version": 2,
  "builds": [
    
    {
      "src": "backend-code/server.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "15mb"
      }
    },
   
    {
      "src": "gold-swift-bank/index.jsx",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "gold-swift-bank/dist" 
      }
    }
  ],
  "routes": [
    
    {
      "src": "/api/(.*)",
      "dest": "backend-code/api/index.js"
    },
    
    {
      "src": "/(.*)",
      "dest": "gold-swift-bank/dist/$1"
    }
  ]
}