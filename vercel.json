{
  "version": 2,
  "builds": [
    {
      "src": "backend-code/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "golden-swift-bank/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend-code/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/golden-swift-bank/dist/$1"
    }
  ],
  "buildCommand": "cd golden-swift-bank && npm install --include=dev && npm run build"
}
