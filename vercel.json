{
  "version": 2,
  "builds": [
    {
      "src": "backend-code/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "golden-swift-bank/package.json", 
      "use": "@vercel/static-build",
      "config": {
        "rootDirectory": "golden-swift-bank", 
        "distDir": "dist" 
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend-code/server.js"
    },
    {
        "src": "/static/(.*)",
        "dest": "golden-swift-bank/dist/static/$1"
    },
    {
    
      "src": "/(.*)",
      "dest": "golden-swift-bank/dist/index.html" 
    }
  ]
}